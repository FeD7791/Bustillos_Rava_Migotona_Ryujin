<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://kit.fontawesome.com/68bc1fc849.js" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"  href="css/styles_create_account.css">
    <title>Document</title>
</head>
<body>
    <%- include('./partials/header.ejs') %> 
    <main class="main">
        <div class="main_izq"></div>
        <div class="formulario">
            <div class="form_header">
                <h1>Crear Cuenta</h1>
                <button style="border-radius: 10px;"><i class="fa-brands fa-facebook fa-2x" style="color: blue;"></i></button>
                <button style="border-radius: 10px;"><i class="fa-brands fa-google fa-2x" style="color: red;"></i></button>

            </div>
            <form class="formulario" action="/register" method="post">
                
                <fieldset name="datos_creacion_cuenta" class="formulario">
                    <input type="text" id="name" name="nombre" placeholder="Nombre" class="input_style">
                    <input type="text" id="last_name" name="apellido" placeholder="Apellido" class="input_style">
                    <input type="email" id="email" name="correo" placeholder="Email" class="input_style">
                    <input type="date" id="birthdate" name="fecha_de_nacimiento" placeholder="Fecha de Nacimiento" class="input_style">
                    <input type="password" id="pwd" name="contrasenia" placeholder="ContraseÃ±a" class="input_style">
                </fieldset>
                <input type="submit" value="Crear Cuenta" class="ingresar_button">
            </form>
            <% if(typeof validaciones != 'undefined') { %>
                <% validaciones.forEach( (validaciones)=> { %>
                <div class="alert alert-primary" role="alert">
                    <strong><%= validaciones.msg %></strong>
                </div>
                <% }) %>
              <% } %>
        </div>
        <div class="main_der"></div>
    </main>
    <%- include('./partials/footer.ejs') %> 
    
</body>
</html>